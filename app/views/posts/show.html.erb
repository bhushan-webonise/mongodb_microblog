<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<% @post.comments.where(comment_id: nil).each do |comment| %>
  <p>
    <strong> main Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>main Comment:</strong>
    <%= comment.body %>
  </p>
    
  <% comment.comments.each do |i| %>
    <p>
      <strong>reply Commenter:</strong>
      <%= i.commenter %>
    </p>
  
    <p>
      <strong>reply Comment:</strong>
      <%= i.body %>
    </p>
    <% end %>
<% end %>
  
<h2>Add a comment:</h2>
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
